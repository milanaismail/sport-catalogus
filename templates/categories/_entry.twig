{% extends "_layouts/main" %}
{% block content %}
    <div class="shop ">
        <div class="page-title">
        <h1>{{ category.title }}</h1>
        </div>
        {% include '_layouts/shop-control-bar' %}
        
        <div class="shop-container" id="productContainer">
            {% set entries = craft.entries().section('products').relatedTo(category) %}
            {% for entry in entries %}
            <a href="{{ entry.url }}" class="product-info">
                <div class="product">
                {% set productImage = entry.productImage.one() %}
                {% if productImage %}
                <img src="{{ productImage.getUrl('imagePreview') }}" alt="{{ entry.title }}" class="desktop-image">
                 <img src="{{ productImage.getUrl('mobilepreview') }}" alt="{{ entry.title }}" class="mobile-image">
                {% endif %}
                    <h2>{{ entry.title }}</h2>
                    <p>â‚¬ {{ entry.productPrice }}</p>
                </div>
            </a>
{% endfor %}
        </div>
    </div>
{% endblock %}