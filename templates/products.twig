{% extends "_layouts/main" %}
{% block content %}
    <div class="shop">
        <h1>All products</h1>
        <div class="shop-control-bar">
        <select id="sortSelect">
            <option value="0">Sort by</option>
            <option value="1">Price: low to high</option>
            <option value="2">Price: high to low</option>
        </select>
        </div>
        <div class="shop-container" id="productContainer">
            {% set entries = craft.entries().section('products').all() %}
            {% for entry in entries %}
            <div class="product">
            {% set productImage = entry.productImage.one() %}
            {% if productImage %}
            <img src="{{ productImage.getUrl('imagePreview') }}" alt="{{ entry.title }}">
            {% endif %}
                <h2>{{ entry.title }}</h2>
                <p>â‚¬ {{ entry.productPrice }}</p>
                <button>Add to cart</button>
            </div>
{% endfor %}
        </div>
    </div>
{% endblock %}