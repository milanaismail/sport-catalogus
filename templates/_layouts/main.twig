<!DOCTYPE html>
<html lang="{{craft.app.language}}">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <title>Hockey store</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />
    <meta name="referrer" content="origin-when-cross-origin" />
    {% do craft.app.view.registerCssFile('@web/styles/normalize.css') %}
    {% do craft.app.view.registerCssFile('@web/styles/style.css') %}
    {% do craft.app.view.registerJsFile('@web/scripts/main.js') %}
    {% do craft.app.view.registerJsFile('@web/scripts/sprig.js') %}
</head>
<body>
    <header>
        <div class="header-container">
            <div class="header-top">
                <div class="logo">
                    <a href="index.twig"><img id="logo" src="{{ siteUrl }}images/logo.png" alt="logo" style="width: 100px"></a>
                </div>
                <div class="search">
                {% set query = query ?? '' %}
                    <div class="field">
                        <input sprig s-trigger="keyup changed" s-replace="#productContainer" type="text" name="query" value="{{ query }}" placeholder="Search" class="text">
                    </div>
                    <button class="submit-search" type="button"><img src="{{ siteUrl }}images/search.png" alt="search" style="width: 15px"></button>
                </div>
                <div class="cart">
                    <a href="cart.php"><img src="{{ siteUrl }}images/market.png" alt="cart" style="width: 20px"></a> 
                </div>
            </div>
            <nav>
               <a href="index.twig">Home</a>
               <div class="dropdown">
               <button onclick="window.location.href='{{ siteUrl }}products'" >Products</button>
                    <div class="dropdown-menu">
                            <a href="{{siteUrl}}products/skates">Skates</a>
                            <a href="{{siteUrl}}products/sticks">Sticks</a>
                            <a href="{{siteUrl}}products/helmets">Helmets</a>
                    </div>
               </div>
                    <a href="#">About us</a>
                    <a href="#">Contact</a>
            </nav>
        </div>
    </header>
    {% block content %}
    
    {% endblock %}
</body>
</html>
